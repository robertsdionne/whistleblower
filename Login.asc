// new module script

int login_transparency = 100;


function MaybeLogin() {
  if (UserName.Text.Length > 0) {
    SetNextScreenTransition(eTransitionCrossfade);
    cEgo.ChangeRoom(2);
    username = UserName.Text;
    Login.Visible = false;
    login_transparency = 100;
    String welcome_text = "Hello Employee ID ";
    welcome_text = welcome_text.Append(username);
    welcome_text = welcome_text.Append(",");
    Mail1.Controls[0].AsLabel.Text = welcome_text;
    Mail = Mail1;
    Mail1.Visible = true;
  }
}


function LoginGuiBehavior() {
  if (Login.Visible) {
    // Fade in login dialog
    if (login_transparency > 0) {
      login_transparency -= 5;
      Login.Transparency = login_transparency;
    }
    // Respond to Return key
    if (IsKeyPressed(eKeyReturn)) {
      MaybeLogin();
    }
  }
}


function repeatedly_execute() {
  LoginGuiBehavior();
}
