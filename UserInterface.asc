// new module script

int mail_room = 2, documents_room = 4, chat_room = 5, work_room = 6;

function MaybeClose(Object *o) {
  if ((o.X + Game.SpriteWidth[o.Graphic] - 32 < mouse.x) &&
      (mouse.y < o.Y - Game.SpriteHeight[o.Graphic] + 32)) {
    o.Visible = false;
  } else {
    z_index += 1;
    o.Baseline = z_index;
  }
}

function SwitchTo(int room) {
  gMail.Visible = false;
  SetNextScreenTransition(eTransitionInstant);
  cEgo.ChangeRoom(room);
  cNewsFeed.ChangeRoom(room);
}

function OpenMail() {
  SwitchTo(mail_room);
}

function OpenDocuments() {
  SwitchTo(documents_room);
}

function OpenWork() {
  SwitchTo(work_room);
}

function OpenChat() {
  SwitchTo(chat_room);
}
