function MaybeClose(Object *o) {
  if ((o.X + Game.SpriteWidth[o.Graphic] - 32 < mouse.x) &&
      (mouse.y < o.Y - Game.SpriteHeight[o.Graphic] + 32)) {
    o.Visible = false;
  } else {
    z_index += 1;
    o.Baseline = z_index;
  }
}

