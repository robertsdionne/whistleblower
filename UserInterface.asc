// new module script

function Raise(GUI *g) {
  z_index += 1;
  g.ZOrder = z_index;
}


function HideAll() {
  Mail.Visible = false;
  Document1.Visible = false;
  Document2.Visible = false;
  Document3.Visible = false;
}


function OpenMail() {
  HideAll();
  Mail.Visible = true;
}


function OpenDocuments() {
  HideAll();
  Document1.Visible = true;
  Document2.Visible = true;
  Document3.Visible = true;
}


function OpenWork() {
  HideAll();
}


function OpenChat() {
  HideAll();
}
