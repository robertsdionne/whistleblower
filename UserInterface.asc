// new module script


function Raise(GUI *g) {
  z_index += 1;
  g.ZOrder = z_index;
}


function HideAll() {
  Type.Play();
  Mail.Visible = false;
  Ticket.Visible = false;
  Document1.Visible = false;
  Document2.Visible = false;
  Document3.Visible = false;
  Document4.Visible = false;
  Work.Visible = false;
  Chat1.Visible = false;
  Chat2.Visible = false;
  Chat3.Visible = false;
  Inventory.Visible = false;
  Terminal.Visible = false;
  Logout.Visible = false;
}


function OpenMail() {
  HideAll();
  Mail.Visible = true;
  Ticket.Visible = true;
  Logout.Visible = true;
}


function OpenDocuments() {
  HideAll();
  Document1.Visible = true;
  Document2.Visible = true;
  Document3.Visible = true;
  Document4.Visible = true;
