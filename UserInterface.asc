function MaybeClose(Object *o) {
  int width = Game.SpriteWidth[o.Graphic];
  int height = Game.SpriteHeight[o.Graphic];
  if ((o.X + width - 32 < mouse.x) && (mouse.y < o.Y - height + 32)) {
    o.Visible = false;
  }
}

