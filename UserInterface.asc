// new module script

function Raise(GUI *g) {
  z_index += 1;
  g.ZOrder = z_index;
}

function HideAll() {
  gMail.Visible = false;
  gDocument1.Visible = false;
  gDocument2.Visible = false;
  gDocument3.Visible = false;
}

function OpenMail() {
  HideAll();
  gMail.Visible = true;
}

function OpenDocuments() {
  HideAll();
  gDocument1.Visible = true;
  gDocument2.Visible = true;
  gDocument3.Visible = true;
}

function OpenWork() {
  HideAll();
}

function OpenChat() {
  HideAll();
}
