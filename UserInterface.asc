// new module script


function Raise(GUI *g) {
  z_index += 1;
  g.ZOrder = z_index;
}


function HideAll() {
  Type.Play();
  Mail.Visible = false;
  Ticket.Visible = false;
  Document1.Visible = false;
  Document2.Visible = false;
  Document3.Visible = false;
  Document4.Visible = false;
  Work.Visible = false;
  Chat1.Visible = false;
  Chat2.Visible = false;
  Chat3.Visible = false;
  Inventory.Visible = false;
  Terminal.Visible = false;
  Logout.Visible = false;
  Quit.Visible = false;
  
  // minimized chats
  object[8].Visible = false;
  object[9].Visible = false;
  object[10].Visible = false;
  object[11].Visible = false;
  object[12].Visible = false;
}


function OpenMail() {
  HideAll();
  Mail.Visible = true;
  Ticket.Visible = true;
  Logout.Visible = true;
}


function OpenDocuments() {
