// room script file

function on_event(EventType event, int data) {
  if (eEventEnterRoomBeforeFadein == event) {
    Document1.Visible = true;
    Document2.Visible = true;
    Document3.Visible = true;
  }
}

function Document1_AnyClick() {
  MaybeClose(Document1);
}

function Document2_AnyClick() {
  MaybeClose(Document2);
}

function Document3_AnyClick() {
  MaybeClose(Document3);
}

function MailIcon_AnyClick() {
  OpenMail();
}

function DocumentsIcon_AnyClick() {
  OpenDocuments();
}

function WorkIcon_AnyClick() {
  OpenWork();
}

function ChatIcon_AnyClick() {
  OpenChat();
}
